@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <style>
        body {
            margin-left: 15%;
        }
    </style>

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }




    <div class="sidenav">


        <ul class="list-group nav">
                <li>

                    @Html.ActionLink("Hello " + User.Identity.Name + "! "+Session["Company"], "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    <br />
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    <hr />
                    <br />
                </li>
            
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li id="usersRegister">@Html.ActionLink("Users", "Index", "UsersManagement")</li>
                    <li>@Html.ActionLink("Create Incident/Request", "Create", "IncidentRequest")</li>
        </ul>
    </div>


}
